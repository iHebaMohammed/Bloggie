@model Tag
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Delete Tag - Admin Fuctionality</h1>
    </div>
</div>
<div class="container py-5">
    <form method="post" asp-action="Delete">
        <div class="mb-3">
            <label class="" asp-for="Id"></label>
            <input class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mb-3">
            <label class="" asp-for="Name"></label>
            <input class="form-control" asp-for="Name" readonly/>
        </div>
        <div class="mb-3">
            <label class="" asp-for="DisplayName"></label>
            <input class="form-control" asp-for="DisplayName"readonly />
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Delete</button>
        </div>
    </form>
</div>