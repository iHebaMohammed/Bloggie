@model RegisterViewModel
@{
}
<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <h1 class="mt-3 mb-3 h3">
                Register
            </h1>
            <form method="post" asp-action="Register">
                <div class="mb-3">
                    <label class="form-label" asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" required />
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span class="text-danger" asp-validation-for="Email" required ></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span class="text-danger" asp-validation-for="Password" required ></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" required />
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>

                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-dark">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}